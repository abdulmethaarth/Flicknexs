<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.s2labs.ntcabdriver.activity.DriverHomeActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:showIn="@layout/app_bar_main"
            android:orientation="vertical">


            <android:android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                layout_height="?actionBarSize"
                layout_width="wrap_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:minHeight="?attr/actionBarSize"
                app:theme="@style/ThemeOverlay.AppCompat.Dark"
                tools:ignore="MissingClass">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_height="?actionBarSize"
                    android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/logo"
                            android:layout_width="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="?actionBarSize" />

                    <ImageView
                        android:layout_gravity="right"
                        android:src="@drawable/chhimbalicon"
                        android:layout_width="40dp"
                        android:onClick="notify"
                        android:layout_height="40dp"/>


                </LinearLayout>

            </android:android.support.v7.widget.Toolbar>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/linear2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/activity_main"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                            <android.support.v4.view.ViewPager
                                android:id="@+id/viewPager"
                                android:layout_width="match_parent"
                                android:layout_height="190dp"
                                android:layout_marginBottom="8dp"/>

                            <ProgressBar
                                android:id="@+id/bannerprogress"
                                android:layout_width="35dp"
                                android:visibility="gone"
                                android:layout_height="35dp"
                                android:layout_centerInParent="true"/>

                            <LinearLayout
                                android:id="@+id/SliderDots"
                                android:layout_below="@+id/viewPager"
                                android:orientation="horizontal"
                                android:gravity="center_vertical|center_horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </RelativeLayout>

                        <TextView
                            android:textColor="#FFFFFF"
                            android:id="@+id/viewpagerid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <LinearLayout
                android:id="@+id/latestmovies"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/opensbold1"
                android:layout_marginLeft="10dp"
                android:text="Latest Videos"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/newuploadprogress"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true" />

            <android.support.v7.widget.RecyclerView
                android:layout_margin="10dp"
                android:id="@+id/newuploadrecyler"
                android:layout_width="match_parent"
                android:divider="@null"
                android:layout_height="match_parent"
                android:background="#000000" />


                <TextView
                    android:id="@+id/no_latest_video"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No latest video"
                    android:textColor="#FFFFFF"
                    android:textSize="14dp"
                    android:visibility="gone"
                    android:fontFamily="@font/opens"/>


            </RelativeLayout>
            </LinearLayout>

                <LinearLayout
                    android:id="@+id/trendingmovies"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:fontFamily="@font/opensbold1"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="10dp"
                android:text="Trending Videos"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/moviecatprogress"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true" />

            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="25dp"
                android:layout_margin="10dp"
                android:id="@+id/moviecatgoryrecycler"
                android:layout_width="match_parent"
                android:divider="@null"
                android:layout_height="match_parent"
                android:background="#000000" />


                <TextView
                    android:id="@+id/no_trending_video"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No Trending video"
                    android:textColor="#FFFFFF"
                    android:visibility="gone"
                    android:textSize="14dp"
                    android:fontFamily="@font/opens"/>

            </RelativeLayout>
            </LinearLayout>

                <LinearLayout
                    android:id="@+id/livestreming"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="visible"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:fontFamily="@font/opensbold1"
                        android:textColor="#FFFFFF"
                        android:layout_marginLeft="10dp"
                        android:text="Live Streaming"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ProgressBar
                            android:id="@+id/livestreamingprogress"
                            style="?android:attr/progressBarStyleLarge"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_centerInParent="true" />

                        <android.support.v7.widget.RecyclerView
                            android:layout_marginTop="25dp"
                            android:layout_margin="10dp"
                            android:id="@+id/livestreamingrecycle"
                            android:layout_width="match_parent"
                            android:divider="@null"
                            android:layout_height="match_parent"
                            android:background="#000000" />


                        <TextView
                            android:id="@+id/no_live_streaming"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="live streaming content not available"
                            android:textColor="#FFFFFF"
                            android:textSize="14dp"
                            android:visibility="gone"
                            android:fontFamily="@font/opens"/>

                    </RelativeLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/overall"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:fontFamily="@font/opensbold1"
                        android:textColor="#FFFFFF"
                        android:layout_marginLeft="10dp"
                        android:text="Video Categories"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ProgressBar
                            android:id="@+id/moviecatogoryprogress"
                            style="?android:attr/progressBarStyleLarge"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_centerInParent="true" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <android.support.v7.widget.RecyclerView
                                android:layout_marginTop="25dp"
                                android:layout_margin="10dp"
                                android:id="@+id/moviecatgoryrecycler1"
                                android:layout_width="match_parent"
                                android:divider="@null"
                                android:layout_height="wrap_content"
                                android:background="#000000" />

                        <android.support.v7.widget.RecyclerView

                            android:id="@+id/rv_main"
                            android:scrollbars="none"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        </android.support.v7.widget.RecyclerView>


                            <TextView
                                android:id="@+id/no_movie_category"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Not available"
                                android:textColor="#FFFFFF"
                                android:textSize="14dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:visibility="gone"
                                android:fontFamily="@font/opens"/>

                        </LinearLayout>
                    </RelativeLayout>

                </LinearLayout>



                   <!-- <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">


                    </LinearLayout>-->


                <LinearLayout
                    android:id="@+id/latestaudios"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/opensbold1"
                        android:layout_marginLeft="10dp"
                        android:text="Latest Audios"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ProgressBar
                            android:id="@+id/audioprogress"
                            style="?android:attr/progressBarStyleLarge"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_centerInParent="true" />

                        <android.support.v7.widget.RecyclerView
                            android:layout_margin="10dp"
                            android:id="@+id/audiorecycler"
                            android:layout_width="match_parent"
                            android:divider="@null"
                            android:layout_height="match_parent"
                            android:background="#000000" />


                        <TextView
                            android:id="@+id/no_latest_audio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Not Available"
                            android:textColor="#FFFFFF"
                            android:textSize="14dp"
                            android:gravity="center"
                            android:visibility="gone"
                            android:fontFamily="@font/opens"/>


                    </RelativeLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/trendingaudios"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/opensbold1"
                        android:layout_marginLeft="10dp"
                        android:text="Trending Audios"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ProgressBar
                            android:id="@+id/audiocatprogress"
                            style="?android:attr/progressBarStyleLarge"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_centerInParent="true" />

                        <android.support.v7.widget.RecyclerView
                            android:layout_margin="10dp"
                            android:id="@+id/audiocatrecycler"
                            android:layout_width="match_parent"
                            android:divider="@null"
                            android:layout_height="match_parent"
                            android:background="#000000" />

                        <TextView
                            android:id="@+id/no_trending_audio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No Audios"
                            android:gravity="center"
                            android:visibility="gone"
                            android:textColor="#FFFFFF"
                            android:textSize="14dp"
                            android:fontFamily="@font/opens"/>

                    </RelativeLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/opensbold1"
                        android:layout_marginLeft="10dp"
                        android:text="Audio Albums"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ProgressBar
                            android:id="@+id/audioalbumprogress"
                            style="?android:attr/progressBarStyleLarge"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_centerInParent="true" />

                        <android.support.v7.widget.RecyclerView
                            android:layout_margin="10dp"
                            android:id="@+id/audioalbumrecycler"
                            android:layout_width="match_parent"
                            android:divider="@null"
                            android:layout_height="match_parent"
                            android:background="#000000" />


                        <TextView
                            android:id="@+id/no_album"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No Albums"
                            android:visibility="gone"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textSize="14dp"
                            android:fontFamily="@font/opens"/>


                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/userid"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"/>

            </LinearLayout>


            </ScrollView>


            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.BottomNavigationView
                android:id="@+id/navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelVisibilityMode="labeled"
                android:layout_gravity="bottom"
                app:itemTextAppearanceActive="@style/Widget.BottomNavigationViewtext"
                app:itemTextColor="@drawable/bottom_navigation_selector"
                android:layout_alignParentBottom="true"
                app:itemIconTint="@drawable/bottom_navigation_selector"
                android:theme="@style/Widget.BottomNavigationView14"
                android:background="#101010"
                app:menu="@menu/navigation"/>



        </RelativeLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#000000"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/userdetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/userdp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/avatar" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:visibility="visible"
                        android:fontFamily="@font/opensans"
                        android:text=""
                        android:singleLine="true"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/useremail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:fontFamily="@font/opensans"
                        android:padding="5dp"
                        android:visibility="visible"
                        android:text=""
                        android:singleLine="true"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_weight="4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/sidemenuimg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:src="@drawable/backright" />
                </LinearLayout>

                </LinearLayout>

            </LinearLayout>



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/notification_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="3"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="25dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/edit" />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/name1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:fontFamily="@font/opensans"
                        android:visibility="visible"
                        android:text="Notification"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/name2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:fontFamily="@font/opensans"
                        android:layout_marginTop="5dp"
                        android:visibility="visible"
                        android:text="Click here to on/off"
                        android:textColor="#FFFFFF"
                        android:textSize="11sp" />


                </LinearLayout>

            </LinearLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/sidemenu1"
                android:layout_width="match_parent"
                android:divider="@null"
                android:layout_height="wrap_content"
                android:background="#222425" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                            android:background="#FFFFFF"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/sidemenu2"
                android:layout_width="match_parent"
                android:divider="@null"
                android:layout_height="wrap_content"
                android:background="#222425" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f2f2f2"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/sidemenu3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000000" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f2f2f2"/>


        </LinearLayout>

    </LinearLayout>
</android.support.v4.widget.DrawerLayout>