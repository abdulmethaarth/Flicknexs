<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MusicPlayerActivity"
    android:background="#000000"
    android:orientation="vertical">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:id="@+id/frame"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/downarrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/arrowback"/>

       <!-- <android.support.v7.widget.RecyclerView
            android:id="@+id/playerrecycle1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Small Text" />-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/audtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/opensbold"
                android:textColor="#FFFFFF"
                android:layout_marginRight="10dp"
                android:textAllCaps="true"
               android:gravity="right"
                android:text="Up Next"/>

            <TextView
                android:id="@+id/audalbum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:fontFamily="@font/opens"
                android:textColor="#FFFFFF"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:text="Up Next"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">



        <ImageView
            android:id="@+id/audioimage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:orientation="vertical" />

        </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
              android:layout_weight="1">

             <ScrollView
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:orientation="vertical">
             <LinearLayout
                 android:orientation="horizontal"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_margin="10dp">

                 <TextView
                     android:layout_weight="1"
                     android:id="@+id/first"
                     android:layout_gravity="center"
                     android:gravity="center"
                     android:layout_width="match_parent"
                     android:textColor="#FFFFFF"
                     android:fontFamily="@font/opens"
                     android:layout_height="wrap_content"
                     android:visibility="visible"
                     android:text="00:00" />


                 <SeekBar
                 android:layout_width="match_parent"
                 android:layout_height="40dp"
                 android:id="@+id/seekBar"
                     android:layout_weight="0.5"

                 />

                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="00:00"
                     android:id="@+id/last"
                     android:textColor="#FFFFFF"
                     android:fontFamily="@font/opens"
                     android:layout_gravity="center"
                     android:gravity="center"
                     android:layout_weight="1"
                     android:visibility="visible"
                     />

             </LinearLayout>

             <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:orientation="horizontal">


                 <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:orientation="vertical"
                     android:layout_weight="1"

                     >

                     <ImageView
                         android:id="@+id/shuffle"
                         android:layout_width="45dp"
                         android:layout_height="45dp"
                         android:gravity="center"
                         android:src="@drawable/shuffle"
                         android:layout_gravity="center"
                         android:padding="10dp"
                         />

                     <ImageView
                         android:id="@+id/shufflevisible"
                         android:layout_width="45dp"
                         android:layout_height="45dp"
                         android:gravity="center"
                         android:visibility="gone"
                         android:src="@drawable/shufflevisible"
                         android:layout_gravity="center"
                         android:padding="10dp"
                         />



                 </LinearLayout>



                 <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"

                >

                <ImageView
                    android:id="@+id/previous"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:src="@drawable/previous"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/pausebutton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"

                >

                <ImageView
                    android:id="@+id/button61"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:src="@drawable/pause"
                    android:gravity="center"
                    />



            </LinearLayout>

            <LinearLayout
                android:id="@+id/playbutton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:visibility="gone"
                >
                <ImageView
                    android:id="@+id/button51"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:src="@drawable/play"
                    android:layout_gravity="center"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >


                <ImageView
                    android:id="@+id/next"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:src="@drawable/next"
                    android:layout_gravity="center"
                    />

            </LinearLayout>


                 <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:orientation="vertical"
                     android:layout_weight="1"

                     >

                     <ImageView
                         android:id="@+id/repeat"
                         android:layout_width="45dp"
                         android:layout_height="45dp"
                         android:gravity="center"
                         android:src="@drawable/repeat"
                         android:layout_gravity="center"
                         android:padding="10dp"
                         />

                       <ImageView
                     android:id="@+id/repeatvisible"
                     android:layout_width="45dp"
                     android:layout_height="45dp"
                     android:gravity="center"
                     android:visibility="gone"
                     android:src="@drawable/repeatvisible"
                     android:layout_gravity="center"
                     android:padding="10dp"
                     />


                 </LinearLayout>


             </LinearLayout>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 >
                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:gravity="center"
                     android:orientation="horizontal">



                 </LinearLayout>
                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:layout_gravity="top"
                     android:layout_marginBottom="20dp"
                     android:orientation="horizontal">






                 </LinearLayout>

                 <LinearLayout
                     android:layout_margin="10dp"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:orientation="horizontal">

                     <LinearLayout
                         android:layout_width="wrap_content"
                         android:layout_height="match_parent"
                         android:orientation="horizontal"

                         >


                         <LinearLayout
                             android:id="@+id/watchlist"
                             android:layout_width="wrap_content"
                             android:layout_height="match_parent"
                             android:orientation="vertical">


                             <ImageView
                                 android:id="@+id/watchlistimg"
                                 android:layout_width="match_parent"
                                 android:layout_height="match_parent"
                                 android:layout_weight="1"
                                 android:padding="5dp"
                                 android:src="@drawable/add" />
                             <ImageView
                                 android:layout_weight="1"
                                 android:id="@+id/watchlistaddimg"
                                 android:src="@drawable/added"
                                 android:visibility="gone"
                                 android:padding="5dp"
                                 android:layout_width="match_parent"
                                 android:layout_height="match_parent"/>

                             <TextView
                                 android:layout_width="match_parent"
                                 android:layout_gravity="center"
                                 android:textColor="#FFFFFF"
                                 android:gravity="center"
                                 android:textSize="12dp"
                                 android:padding="5dp"
                                 android:fontFamily="@font/opensans"
                                 android:layout_height="wrap_content"
                                 android:text="Watchlist"/>

                         </LinearLayout>

                         <LinearLayout
                             android:id="@+id/share1"
                             android:layout_width="wrap_content"
                             android:layout_height="match_parent"
                             android:orientation="vertical">


                             <ImageView
                                 android:id="@+id/shareimage"
                                 android:layout_width="match_parent"
                                 android:layout_height="match_parent"
                                 android:layout_weight="1"
                                 android:padding="5dp"
                                 android:src="@drawable/ssahre" />

                             <TextView
                                 android:layout_width="match_parent"
                                 android:layout_height="wrap_content"
                                 android:layout_gravity="center"
                                 android:fontFamily="@font/opensans"
                                 android:gravity="center"
                                 android:padding="5dp"
                                 android:text="Share"
                                 android:textColor="#FFFFFF"
                                 android:textSize="12dp" />

                         </LinearLayout>


                     </LinearLayout>

                 </LinearLayout>

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:layout_weight="1"
                     android:orientation="vertical">

                     <TextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:textSize="18dp"
                         android:fontFamily="@font/opensbold1"
                         android:textColor="#FFFFFF"
                         android:layout_marginLeft="10dp"
                         android:text="Up Next"/>


                     <RelativeLayout
                         android:visibility="visible"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content">

                         <ProgressBar
                             android:id="@+id/upnextprogress"
                             style="?android:attr/progressBarStyleLarge"
                             android:layout_width="35dp"
                             android:layout_height="35dp"
                             android:visibility="visible"
                             android:layout_centerInParent="true" />

                         <android.support.v7.widget.RecyclerView
                             android:layout_marginTop="25dp"
                             android:layout_margin="10dp"
                             android:id="@+id/upnextrecycler"
                             android:layout_width="match_parent"
                             android:divider="@null"
                             android:layout_height="match_parent"
                             android:background="#000000" />

                     </RelativeLayout>

                 </LinearLayout>



                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:layout_weight="1"
                     android:orientation="vertical">

                     <TextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:textSize="18dp"
                         android:fontFamily="@font/opensbold1"
                         android:textColor="#FFFFFF"
                         android:layout_marginLeft="10dp"
                         android:text="Similar Audios"/>


                     <RelativeLayout
                         android:visibility="visible"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content">

                         <ProgressBar
                             android:id="@+id/similaraudioprogress"
                             style="?android:attr/progressBarStyleLarge"
                             android:layout_width="35dp"
                             android:layout_height="35dp"
                             android:visibility="visible"
                             android:layout_centerInParent="true" />

                         <android.support.v7.widget.RecyclerView
                             android:layout_marginTop="25dp"
                             android:layout_margin="10dp"
                             android:id="@+id/similaraudiosrecycler"
                             android:layout_width="match_parent"
                             android:divider="@null"
                             android:layout_height="match_parent"
                             android:background="#000000" />

                     </RelativeLayout>

                 </LinearLayout>

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:orientation="vertical">

                     <TextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         />
                     <TextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         />


                 </LinearLayout>


             </LinearLayout>

         </LinearLayout>


             </ScrollView>

</LinearLayout>

        </LinearLayout>
    </FrameLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tt1"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tt2"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tt"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/vol1"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/keyvalue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/volid"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>